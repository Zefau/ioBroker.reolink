{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_options": {
            "type": "panel",
            "label": "Kamera Typ",
            "items": {
                "cameraIp": {
                    "type": "text",
                    "sm": 2,
                    "md": 4,
                    "lg": 4,
                    "label": "IP-Adresse"
                },
                "cameraProtocol": {
                    "newLine": true,
                    "type": "select",
                    "label": "Protocol",
                    "sm": 2,
                    "md": 2,
                    "lg": 4,
                    "options": [
                        {"label": "https", "value": "https"},
                        {"label": "http", "value": "http"}
                    ] 
                },
                "sslvalid":{
                    "type": "checkbox",
                    "sm": 4,
                    "md": 4,
                    "lg": 4,
                    "label": "SSL-Zertifikat validieren"
                },
                "cameraChannel": {
                    "type": "number",
                    "sm": 2,
                    "md": 4,
                    "lg": 4,
                    "label": "Kanal"
                },
                "cameraUser": {
                    "newLine": true,
                    "type": "text",
                    "sm": 2,
                    "md": 4,
                    "lg": 4,
                    "label": "Benutzer"
                },
                "cameraPassword": {
                    "type": "password",
                    "repeat": false,
                    "visible": false,
                    "sm": 2,
                    "md": 4,
                    "lg": 4,
                    "label": "Passwort"
                },
                "UriEncodedPassword":{
                    "type": "checkbox",
                    "sm": 4,
                    "md": 4,
                    "lg": 4,
                    "label": "Uri encode password"
                }
            }
        },
        "_advanced": {
            "type": "panel",
            "label": "Erweitert",
            "items": {
                "apiRefreshInterval": {
                    "type": "number",
                    "min": 1,
                    "max": 10000,
                    "sm": 6,
                    "md": 6,
                    "lg": 6,
                    "label": "Abfragezyklus der Kamera",
                    "help": "in Sekunden"
                }
            }
        }
    }
}
